{
  "name": "color-picker-native",
  "version": "1.0.1",
  "description": "A framework-agnostic color picker with support for solid colors and gradients",
  "type": "module",
  "files": [
    "dist",
    "es",
    "lib",
    "types"
  ],
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "changelog": "conventional-changelog -p -i CHANGELOG.md -s"
  },
  "keywords": [
    "color-picker",
    "color-wheel",
    "gradient",
    "javascript",
    "vanilla-js",
    "vite"
  ],
  "author": "edy",
  "license": "MIT",
  "devDependencies": {
    "conventional-changelog-cli": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
